{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Web Production",
            "type": "shell",
            "command": "flutter",
            "args": [
                "build",
                "web",
                "-t",
                "lib/main_prod.dart"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Deploy Firebase",
            "type": "shell",
            "command": "firebase",
            "args": [
                "deploy"
            ],
            "dependsOn": [
                "Build Web Production"
            ],
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Deploy Hosting only",
            "type": "shell",
            "command": "firebase",
            "args": [
                "deploy",
                "--only",
                "hosting"
            ],
            "dependsOn": [
                "Build Web Production"
            ],
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Deploy Cloud Functions Only",
            "type": "shell",
            "command": "firebase",
            "args": [
                "deploy",
                "--only",
                "functions"
            ],
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ]
}