{
    "version": "2.0.0",
    "command": "bash",
    "args": ["-c"],
    "tasks": [
        {
            "label": "Build Web Production",
            "type": "shell",
            "command": "flutter",
            "args": [
                "build",
                "web",
                "-t",
                "lib/main_prod.dart"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        
    ]
}